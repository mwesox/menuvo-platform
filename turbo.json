{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".output/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"check-types": {
			"dependsOn": ["^check-types", "^build"]
		},
		"test": {}
	}
}
